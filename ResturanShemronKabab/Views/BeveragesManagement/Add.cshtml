@* @model Restaurant.DomainModel.ApplicationModel.Beverages.BeveragesAddAndEditModel *@
@model ResturanShemronKabab.ViewModel.BeveragesAddEditViewModel
@{
	Layout = null;
	SelectList categoryDropDown = (SelectList)ViewBag.categoryDropDown;
}
<h4>Add Beverages </h4>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Add" asp-controller="BeveragesManagement" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label for="CategoryID">Category</label>
				<select asp-items="categoryDropDown" class="form-control" asp-for="CategoryID"></select>
			</div>
			<div class="form-group">
				<label asp-for="BeveragesName" class="control-label"></label>
				<input asp-for="BeveragesName" class="form-control" type="text" placeholder="Beverages Name" id="Name" data-Err-Name="spnErrName" data-msg="Enter your Beverages Name correctly" oninput="ValidationName(this)" />
				<span class="text-danger" id="spnErrName"></span>
			</div>
			<div class="form-group">
				<label asp-for="UnitPrice" class="control-label"></label>
				<input asp-for="UnitPrice" class="form-control" type="text" placeholder="UnitPrice" id="UnitPrice" data-Err-UnitPrice="spnErrUnitPrice" data-msg="Enter your UnitPrice correctly" oninput="ValidationUnitPrice(this)" />
				<span class="text-danger" id="spnErrUnitPrice"></span>
			</div>
			<div class="form-group">
				<span>Picture</span>
				<input type="file" name="Picture" id="Picture" value="" />
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-success" />
			</div>
		</form>
	</div>
</div>
