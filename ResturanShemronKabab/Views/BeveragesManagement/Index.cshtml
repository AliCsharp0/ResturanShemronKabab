@model Restaurant.DomainModel.ApplicationModel.Beverages.BeveragesSearchModel
@{
	SelectList categoryDropDown = (SelectList)ViewBag.categoryDropDown;
}
<form asp-controller="BeveragesManagement" asp-action="Index" method="get" id="frmSearch">
	<table class="table table-hover table-striped table-sm">
		<tr>
			<td>
				<label asp-for="BeveragesName" class="form-control"></label>
				<input type="text" class="form-control" asp-for="BeveragesName" />
			</td>
		</tr>
		<tr>
			<td>
				<label asp-for="CategoryID" class="form-control">Category</label>
				<select asp-items="categoryDropDown" class="form-control" asp-for="CategoryID"></select>
			</td>
		</tr>
		<tr>
			<td>
				<label asp-for="UnitPriceFrom" class="form-control"></label>
				<input type="text" class="form-control" asp-for="UnitPriceFrom" />
			</td>
		</tr>
		<tr>
			<td>
				<label asp-for="UnitPriceTo" class="form-control"></label>
				<input type="text" class="form-control" asp-for="UnitPriceTo" />
			</td>
		</tr>
		<tr class="text-center">
			<td colspan="2">
				<span class="btn btn-primary btn-sm spnSearch" data-controller="BeveragesManagement" data-action="Search">Search</span>
				@Html.ActionLink("RemoveFilter", "Index", "BeveragesManagement", null, new { @class = "btn btn-danger btn-sm" })
			</td>
		</tr>
	</table>
</form>

<div class="col-md-12">
	<a asp-action="Add" asp-controller="BeveragesManagement" class="btn btn-primary">Add New Food</a>
</div>


<div id="dvContent" data-controller="BeveragesManagement" data-action="List" data-search-form="frmSearch"></div>

