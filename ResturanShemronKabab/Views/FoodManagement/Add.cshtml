@model Restaurant.DomainModel.ApplicationModel.Food.FoodAddAndEditModel
@{
	Layout = null;
	SelectList categoryDropDown = (SelectList)ViewBag.categoryDropDown;
}
<h4>FoodAddAndEditModel</h4>
<div class="row">
	<div class="col-md-4">
		<form id="frmAddFood">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label for="CategoryID">Category</label>
				<select asp-items="categoryDropDown" class="form-control" asp-for="CategoryID"></select>
			</div>
			<div class="form-group">
				<label asp-for="FoodName" class="control-label"></label>
				<input asp-for="FoodName" class="form-control" />
				<span asp-validation-for="FoodName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="UnitPrice" class="control-label"></label>
				<input asp-for="UnitPrice" class="form-control" />
				<span asp-validation-for="UnitPrice" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Materials" class="control-label"></label>
				<input asp-for="Materials" class="form-control" />
				<span asp-validation-for="Materials" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Image" class="control-label"></label>
				<input asp-for="Image" class="form-control" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>
			<div class="form-group">
				<span type="submit" class="btn btn-success saveAdd" data-action="Add" data-controller="FoodManagement" data-form-id="frmAddFood">Add</span>
			</div>
		</form>
	</div>
</div>