@model Security.Domain.ApplicationModel.UserAddModelCustomer

@{
	 Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Create</title>
	<link href="~/content/font-awesome.css" rel="stylesheet" />
	<link href="~/content/font-awesome.min.css" rel="stylesheet" />
	<link href="~/css/stylesheet.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ResturanShemronKabab.styles.css" asp-append-version="true" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<link href="~/css/sweetalert2.min.css" rel="stylesheet" />
	<script src="~/validation/validation.js"></script>
</head>
<body>
	<h4>User</h4>
	@* @if (TempData["ErrorMessage"] != null)
	{
		<h1 style="color:red"> TempData["ErrorMessage"]</h1>
	} *@
	@if (TempData["ErrorMessage"] != null)
	{
		<h1 style="color:red">@TempData["ErrorMessage"]</h1>
	}

	<hr />
	<div class="row" style="display: flex; justify-content: center;">
		<div class="col-md-4">
			<form asp-action="Create" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
				<table class="table table-hover table-striped table-sm">
					<div class="form-group">
						<label asp-for="FirstName" class="control-label"></label>
						<input asp-for="FirstName" class="form-control" type="text" placeholder="First Name" id="Name" data-Err-Name="spnErrName" data-msg="Enter your First Name correctly" oninput="ValidationName(this)" />
						<span class="text-danger" id="spnErrName"></span>
					</div>
					<div class="form-group">
						<label asp-for="LastName" class="control-label"></label>
						<input asp-for="LastName" class="form-control" type="text" placeholder="Last Name" id="Last" data-Err-Last="spnErrLast" data-msg="Enter your  Last Name correctly" oninput="ValidationLast(this)" />
						<span class="text-danger" id="spnErrLast"></span>
					</div>
					<div class="form-group">
						<label asp-for="Email" class="text-center"></label>
						<input asp-for="Email" class="form-control" type="text" placeholder="Email" id="Email" data-Err-Email="spnErrorEmail" oninput="ValidationEmail(this)" />
						<span class="text-danger" id="spnErrorEmail"></span>
					</div>
					<div class="form-group">
						<label asp-for="UserName" class="control-label"></label>
						<input asp-for="UserName" class="form-control" type="text" placeholder="UserName" id="UserName" data-Err-userName="spnErrUserName" oninput="ValidationUserName(this)" />
						<span class="text-danger" id="spnErrUserName"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password" class="text-center"></label>
						<input asp-for="Password" class="form-control" type="text" placeholder="Password" id="Password" data-Err-Password="spnErrPassword" data-msg="Enter your Password correctly" oninput="ValidationPassword(this)" />
						<span class="text-danger" id="spnErrPassword"></span>
					</div>
					<div class="form-group">
						<label asp-for="Mobile" class="control-label"></label>
						<input asp-for="Mobile" class="form-control" class="form-control" type="text" placeholder="Mobile" id="Mobile" data-Err-Mobile="spnErrMobile" oninput="ValidationMobile(this)" />
						<span class="text-danger" id="spnErrMobile"></span>
					</div>
					<div class="form-group form-check">
						<label class="form-check-label">
							<input class="form-check-input" asp-for="IsEmailActivated" /> @Html.DisplayNameFor(model => model.IsEmailActivated)
						</label>
					</div>
					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-primary" />
					</div>
					<div class="form-group" style="    padding: 20px 0px;">
						<a asp-action="Index" style="    border: 1px solid;
     font-size: 12px;
    padding: 13px 6px;
    color: #fff;
    background-color: #0b5ed7;
    border-radius: 7px;">Back to List </a>
					</div>
				</table>
			</form>
		</div>
	</div>

	@* <div>
	<a asp-action="Index">Back to List</a>
	</div> *@

</body>
</html>