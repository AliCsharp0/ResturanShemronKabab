@model Restaurant.DomainModel.ApplicationModel.Category.CategoryAddAndEditModel
@{
	Layout =null;
    SelectList cats = (SelectList)ViewBag.drpRoots;
}
<h4>Edit And Update Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" id="frmUpdateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" asp-for="CategoryID" class="form-control" />

            </div>
            <div class="form-group">
                <label>ParentID</label>
                <select asp-for="ParentID" asp-items=@cats></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" type="text" placeholder="Category Name" id="Name" data-Err-Name="spnErrName" data-msg="Enter your Category Name correctly" oninput="ValidationName(this)" />
                <span class="text-danger" id="spnErrName"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmallDescription" class="control-label"></label>
                <input asp-for="SmallDescription" class="form-control" type="text" placeholder="Small Description" id="SmallDescription" data-Err-SmallDescription="spnErrSmallDescription" data-msg="Enter your Small Description correctly" oninput="ValidationSmallDescription(this)" />
                <span class="text-danger" id="spnErrSmallDescription"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
         @*    <div class="form-group">
                <label asp-for="ParentID" class="control-label"></label>
                <input asp-for="ParentID" class="form-control" />
                <span asp-validation-for="ParentID" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <span type="submit" class="btn btn-success saveUpdate" data-action="Update" data-controller="CategoryManagement" data-form-id="frmUpdateCategory">Update</span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
