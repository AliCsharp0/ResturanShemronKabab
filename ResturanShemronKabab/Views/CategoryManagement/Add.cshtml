@model Restaurant.DomainModel.ApplicationModel.Category.CategoryAddAndEditModel
@{
	Layout = null;
    SelectList cats = (SelectList)ViewBag.drpRoots;
}
<h4>Register Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="frmAddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label>ParentID</label>
                <select asp-for="ParentID" asp-items=@cats></select>


            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmallDescription" class="control-label"></label>
                <input asp-for="SmallDescription" class="form-control" />
                <span asp-validation-for="SmallDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span type="submit" class="btn btn-success saveAdd" data-action="Add" data-controller="CategoryManagement" data-form-id="frmAddCategory">Add</span>
            </div>
        </form>
    </div>
</div>

