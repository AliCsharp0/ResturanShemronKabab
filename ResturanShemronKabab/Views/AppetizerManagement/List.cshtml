@{
	Layout = null;
}
@model IEnumerable<Restaurant.DomainModel.ApplicationModel.Appetizer.AppetizerListItem>
<table class="table table-bordered table-hover table-striped ">
	<thead>
		<tr>
			<th>Appetizer ID</th>
			<th>Appetizer Name</th>
			<th>Category Name</th>
			<th>Unit Price</th>
			<th>Image</th>
			<th>Delete Image</th>
			<th>Delete</th>
			<th>Update</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr id="tr-@item.AppetizerID">
				<td>
					@Html.DisplayFor(modelItem => item.AppetizerID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AppetizerName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CategoryName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UnitPrice)
				</td>
				<td style="display: flex; justify-content: center;">
					<img  src='@Url.Content(@item.Image)' width="100" />
				</td>
			@* 	<td>
					<span class="btn btn-warning btn-sm" onclick="DeleteImage('@item.AppetizerID')">Delete Image</span>
				</td> *@
				<td>
					<span class="btn btn-warning btn-sm" onclick="DeleteItem('@item.AppetizerID', 'AppetizerManagement', 'List', 'appetizerID', 'DeleteImage')">Delete Image</span>
				</td>
				<td>
					<span class="btn btn-danger btn-sm btn-Remove" data-controller="AppetizerManagement" data-action="Remove" data-id="@item.AppetizerID">Delete</span>
				</td>
				<td>
					@Html.ActionLink("Update", "Update", new { AppetizerID = item.AppetizerID }, new { @class = "btn btn-primary btn-sm" })
				</td>
			</tr>
		}
	</tbody>
</table>