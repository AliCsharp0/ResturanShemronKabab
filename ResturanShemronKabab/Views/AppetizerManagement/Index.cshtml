@model Restaurant.DomainModel.ApplicationModel.Appetizer.AppetizerSearchModel
@{
	SelectList categoryDropDown = (SelectList)ViewBag.categoryDropDown;
}
<form asp-controller="FoodManagement" asp-action="Index" method="get" id="frmSearch">
	<table class="table table-hover table-striped table-sm">
		<tr>
			<td>
				<label asp-for="AppetizerName" class="form-control"></label>
				<input type="text" class="form-control" asp-for="AppetizerName" />
			</td>
		</tr>
		<tr>
			<td>
				<label asp-for="CategoryID" class="form-control">Category</label>
				<select asp-items="categoryDropDown" class="form-control" asp-for="CategoryID"></select>
			</td>
		</tr>
		<tr>
			<td>
				<label asp-for="UnitPriceFrom" class="form-control"></label>
				<input type="text" class="form-control" asp-for="UnitPriceFrom" />
			</td>
		</tr>
		<tr>
			<td>
				<label asp-for="UnitPriceTo" class="form-control"></label>
				<input type="text" class="form-control" asp-for="UnitPriceTo" />
			</td>
		</tr>
		<tr class="text-center">
			<td colspan="2">
				<span class="btn btn-primary btn-sm spnSearch" data-controller="AppetizerManagement" data-action="Search">Search</span>
				@Html.ActionLink("RemoveFilter", "Index", "AppetizerManagement", null, new { @class = "btn btn-danger btn-sm" })
			</td>
		</tr>
	</table>
</form>

<span class="btn btn-success btn-add" data-controller="AppetizerManagement" data-action="Add">Add New</span>


<div id="dvContent" data-controller="AppetizerManagement" data-action="List" data-search-form="frmSearch"></div>

