@{
	Layout = null;
}
@model IEnumerable<Restaurant.DomainModel.ApplicationModel.User.UserListItem>
<table class="table table-bordered table-hover table-striped ">
	<thead>
		<tr>
			<th>User ID</th>
			<th>User Name</th>
			<th>Email</th>
			<th>Mobile</th>
			<th>Is Email Activated</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Delete</th>
			<th>Update</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr id="tr-@item.UserID">
				<td>
					@Html.DisplayFor(modelItem => item.UserID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UserName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Mobile)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsEmailActivated)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					<span class="btn btn-danger btn-sm btn-Remove" data-controller="UserManagement" data-action="Remove" data-id="@item.UserID">Delete</span>
				</td>
				<td>
					<span class="btn btn-success btn-sm btn-update" data-controller="UserManagement" data-action="Update" data-id="@item.UserID">Update</span>
				</td>
			</tr>
		}
	</tbody>
</table>